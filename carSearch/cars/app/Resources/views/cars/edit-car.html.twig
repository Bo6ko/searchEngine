{% extends 'base.html.twig' %}

{% block body %}

    <h1>Редактиране на обява за автомобил:</h1>
    
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="row">
        
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="row">
                {{ form_start(carForm, { 'attr': {'class': 'searchForm col-lg-12 col-md-12 col-sm-12 col-xs-12'} }) }}
                <div class="row">
                
                    <div class="form-group col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        {{ form_label(carForm.mark, 'Марка:') }}<br/>
                        {{ form_widget(carForm.mark, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    
                    <div class="form-group col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <label>Модел:</label><br/>
                        <select id="car_model" class="form-control" name="car[model]">
                            <option value="">- избери -</option>
                            
                            {% for model in models %}  
                                <option value="{{ model.id }}" data-value="{{ model.mark_id }}">{{ model.name }}</option>
                          
                            {% endfor %}
                            
                        </select>
                    </div>
                        
                    <div class="form-group col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        {{ form_label(carForm.color, 'Цвят:') }}<br/>
                        {{ form_widget(carForm.color, { 'attr': {'class': 'form-control'} }) }} 
                    </div>
                        
                    <div class="form-group col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        {{ form_label(carForm.engine, 'Двигател:') }}<br/>
                        {{ form_widget(carForm.engine, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                        
                    <div class="form-group col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <label>Цена на автомобила:</label>
                        <input type="number" class="form-control" name="car[price]" min="0" step="1"/><br/>  
                    </div>  
                    
                    <div class="searchBtn col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <input type="submit" value="Добави">
                    </div>
                </div>
                {{ form_end(carForm) }}
            </div>
        </div>
            
    </div>
</div>
  
{% endblock %}
