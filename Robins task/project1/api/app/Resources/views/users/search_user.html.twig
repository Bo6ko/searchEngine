{% extends 'base.html.twig' %}

{% block body %}

    <h3>Search result:</h3>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="row">
            <table class="table table-hover" border="1" style="border-collapse: collapse;">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>First name</th>
                        <th>Last name</th>
                        <th>Color</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                
                <tbody>
                {% for user in users|default([]) %}
                    <tr>
                        <td><a href="{{ path("edit_user_process", {id: user.id}) }}">{{ user.id|default(NULL) }}</a></td>
                        <td>{{ user.firstName|default(NULL) }}</td>
                        <td>{{ user.lastName|default(NULL) }}</td>
                        <td class="color">{{ user.color|default(NULL) }}</td>
                        <td><a href="{{ path("delete_user", {id: user.id}) }}">X</a></td>
                    <tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    
    
{% endblock %}
