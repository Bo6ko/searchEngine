{% extends 'base.html.twig' %}

{% block body %}

    <div class="homepageTitle">
        <h1>Buy you new car on AutoDealer:</h1>
        <strong>Everything you need to build an amazing dealership website</strong>
    </div>
    
    {% for msg in app.session.flashbag.get('addCars') %}
        <h2 style="color: blue">{{ msg }}</h2>
    {% endfor %}
    
    {% for msg in app.session.flashbag.get('editCars') %}
        <h2 style="color: blue">{{ msg }}</h2>
    {% endfor %}
      
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="row">
    
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="row searchHeader">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="row">
                        <strong>Търсене на автомобили</strong>
                    </div> </div>     
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <div class="row">
                    <strong>{{ carCount }}</strong>
                </div></div>
            </div>
        </div>
        
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="row">
                {{ form_start(formSearch, { 'attr': {'class': 'searchForm col-lg-12 col-md-12 col-sm-12 col-xs-12'} }) }}
                <div class="row">
                
                    <div class="form-group col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        {{ form_label(formSearch.mark, 'Марка:') }}<br/>
                        {{ form_widget(formSearch.mark, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    
                    <div class="form-group col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <label>Модел:</label><br/>
                        <select id="car_model" class="form-control" name="car[model]">
                            <option value="">- избери -</option>
                            
                            {% for model in models %}  
                                <option value="{{ model.id }}" data-value="{{ model.mark_id }}">{{ model.name }}</option>
                          
                            {% endfor %}
                            
                        </select>
                    </div>
                        
                    <div class="form-group col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        Ценови диапазон: <br/>
                        <b>$0</b> <input id="ex2" name="car[price]" type="text" class="span2" value="" data-slider-min="0" data-slider-max="80000" data-slider-step="5" data-slider-value="[0,80000]"/> <b>$80000</b>
                    </div>
                        
                    <div class="form-group col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        {{ form_label(formSearch.engine, 'Двигател:') }}<br/>
                        {{ form_widget(formSearch.engine, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                        
                    <div class="form-group col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        {{ form_label(formSearch.color, 'Цвят:') }}<br/>
                        {{ form_widget(formSearch.color, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    
                    <div class="searchBtn col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <input type="submit" value="Стартирай търсене">
                    </div>
                </div>
                {{ form_end(formSearch) }}
            </div>
        </div>
            
    </div>
</div>
  
{% endblock %}
