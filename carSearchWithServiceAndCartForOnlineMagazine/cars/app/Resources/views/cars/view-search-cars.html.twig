{% extends 'base.html.twig' %}

{% block body %}

    <h1>Търсене на автомобили</h1>
    
    {% for msg in app.session.flashbag.get('searchCars') %}
        <h2 style="color: blue">{{ msg }}</h2>
    {% endfor %}
    
    <strong>Всички обяви: {{ carCount }}</strong>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="row">
            <table class="table table-hover" border="1" style="border-collapse: collapse;">
                <thead>
                    <tr>
                        <th>№</th>
                        <th>Марка</th>
                        <th>Модел</th>
                        <th>Двигател</th>
                        <th>Цвят</th>
                        <th>Цена</th>
                    </tr>
                </thead>
                
                <tbody>
                    {% for index, car in cars %}
                        <tr>
                            <td><a href="{{ path("edit_car", {id: car.id}) }}">{{ car.id }}</a></td>
                            <td>{{ car.mark }}</td>
                           
                            {% for model in models %}
                                {% if car.model == model.id %}
                                    <td>{{ model.name }}</td>
                                {% endif %}
                            {% endfor %}
                            <td>{{ car.engine }}</td>
                            <td>{{ car.color }}</td>
                            <td>{{ car.price }}</td>
                            {# <td><a href="{{ path("delete_user", {id: user.id}) }}">X</a></td> #}
                        <tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div> 
      
{% endblock %}
